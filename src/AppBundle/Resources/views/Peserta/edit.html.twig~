                <td>{{ entity.phone }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.cetak }}</td>
            </tr>
            {% set i = i + 1 %}
            {% set j = j + 1 %}
        {% endfor %}
        {% if j == 0 %}
			<tr class="text-center"><td colspan="9">Belum Ada Peserta Yang Hadir.</td></tr>
        {% endif %}
