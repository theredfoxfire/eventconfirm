	<script>
	$(function() {
		$('#appbundle_present_name').autocomplete({
			source: "{{ path('peserta_search') }}",
			minLength: 2,
			select: function() {
				''
			}
		});
	});
	
	$("#appbundle_present_name").bind("change", function(e){
		var name = document.getElementById('appbundle_present_name').value;
		var id = name.split("-"); 
		id = id[0];
		$.getJSON("{{ path('peserta_find_address') }}?id=" +id,
				function(data){
				  $.each(data, function(i,item){
					if (item.field == "address") {
					  $("#appbundle_present_address").val(item.value);
					}
					if (item.field == "email") {
					  $("#appbundle_present_email").val(item.value);
					}
					if (item.field == "phone") {
					  $("#appbundle_present_phone").val(item.value);
					}
				  });
				});
		});
	
	setTimeout(function() {
			$('#message-session').fadeOut('slow');
		}, 3500);
	</script>
