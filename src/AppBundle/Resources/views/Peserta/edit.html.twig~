    <table class="table table-bordered table-hover">
        <thead >
            <tr>
                <th>No</th>
                <th>Tanggal</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Asal</th>
                <th>Alamat</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Print</th>
            </tr>
        </thead>
        <tbody>
        {% set j = 0 %}
        {% set pg = app.request.query.get('page') %}
		{% if pg == 1 or pg == null %}
			{% set i = 1 %}
		{% else %}
			{% set i = 25 *( pg-1 ) + 1 %}
		{% endif %}
        {% for entity in entities %}
            <tr>
                <td>{{ i }}</td>
                <td>{{ entity.timestamp|date('Y-m-d') }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.gender }}</td>
